    <script src="JS/main.js"></script>

    <script>

        const getCurrentDay = () => {
            let weekday = new Array(7);
            weekday[0] = "Sunday";
            weekday[1] = "Monday";
            weekday[2] = "Tue";
            weekday[3] = "Wed";
            weekday[4] = "Thursday";
            weekday[5] = "Friday";
            weekday[6] = "Saturday";

            let currentTime = new Date();
            days = weekday[currentTime.getDay()];
            let day = document.getElementById('day')

            day.innerText = days;

        };

        getCurrentDay();

        const getCurrentTime = () => {
            let months = [
                "Jan",
                "Feb",
                "Mar",
                "Apr",
                "May",
                "June",
                "July",
                "Aug",
                "Sept",
                "Oct",
                "Nov",
                "Dec",
            ];

            let currentDate = new Date();
            let month = months[currentDate.getMonth()];
            let date = currentDate.getDate();

            let new_date = date + '-' + month;

            let today_data = document.querySelector('.today_data')
            today_data.innerHTML = new_date;

        }
        getCurrentTime();
    </script>


</body>

</html>