<body>
    {{>navbar}}



    <div class="main_header">

        <div class="row">
            <div class="col-md-10 col-12 mx-auto">

                <div class="container-fluid main_content">

                    <form class="temp_form">

                        <input type="text" id="cityName" placeholder="Enter the City Name" autocomplete="off">
                        <br>
                        <input type="submit" value="search" id="submitBtn">
                        <p id="temp_err"></p>
                    </form>


                    <div class="tempInformation ">
                        <div class="top_layer">
                            <p id="day">Wednesday</p>
                            <p class="today_data">21 FEB</p>
                        </div>
                        <div class="main_layer ">
                            <p id="city_name">Output</p>
                            <div class="middle_layer data_hide">
                            <p id="cel"><span id="temp_real_val"></span>C</p>
                            <p id="temp_status"><i class="fa fa-cloud"></i></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
 


